{
  "manifest_version": 2,

  "name": "UniSearch",
  "description": "Universal Search Tool for Chrome",
  "version": "1.0",

  "icons": {
    "16": "image/logo-16.png",
    "32": "image/logo-32.png",
    "48": "image/logo-48.png",
    "64": "image/logo-64.png",
    "128": "image/logo-128.png",
    "256": "image/logo-256.png"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [{
    "js": ["vendor/jquery/jquery.min.js", "js/inject.js"],
    "css": ["css/inject.css"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "web_accessible_resources": [
    "css/inject.css",
    "js/inject.js",
    "vendor/jquery/jquery.min.js",
    "index.html"
  ],

  "browser_action": {
    "default_title": "UniSearch",
    "default_popup": "index.html"
  },
  "permissions": [
    "https://dict.youdao.com/",
    "tabs",
    "contextMenus"
  ]
}
